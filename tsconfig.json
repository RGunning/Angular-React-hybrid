{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hybrid/react-ng-wrapper": ["dist/libs/react-ng-wrapper"],
      "@hybrid/react-wrappers": ["dist/libs/react-wrappers"],
      "@hybrid/angular-wrappers": ["dist/libs/angular-wrappers"],
      "@hybrid/angular-component-library": [
        "dist/libs/angular-component-library/"
      ],
      "@hybrid/react-component-library": [
        "dist/libs/react-component-library/"
      ]
    },
    "rootDir": "."
  },
  "angularCompilerOptions": {
    "enableIvy": true
  },
  "exclude": ["node_modules", "tmp"]
}
