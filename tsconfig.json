{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hybrid/test-react": ["dist/libs/test-react"],
      "@hybrid/angular-components": ["dist/libs/angular-components"],
      "@hybrid/react-integration": ["dist/libs/react-integration"]
    },
    "rootDir": "."
  },
  "angularCompilerOptions": {
    "enableIvy": true
  },
  "exclude": ["node_modules", "tmp"]
}
